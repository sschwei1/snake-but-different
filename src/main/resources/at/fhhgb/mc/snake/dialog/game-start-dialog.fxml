<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="at.fhhgb.mc.snake.controller.dialog.GameStartDialogController"
        alignment="CENTER"
>
    <padding>
        <Insets top="10" right="20" bottom="10" left="20"/>
    </padding>

    <Label
            text="Start Game Config"
            style="-fx-font-weight: bold; -fx-font-size: 24; -fx-padding: 0"
    />

    <Separator />

    <HBox spacing="10" alignment="CENTER">
        <Label text="Rows [10 - 100]" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="rowInput" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Columns [10 - 100]" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="columnInput" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Initial row of snake [&gt; 0 &amp;&amp; &lt; Rows]" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="initialRow" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Initial column of snake [&gt; 0 &amp;&amp; &lt; Columns]" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="initialColumn" />
    </HBox>
</VBox>